.registration_header
  .registration_header__title
    Chat-Space2
.registration_body.chat_all__space__lists
  .registration_body__main
  .registration_body__header
    新規登録
  .registration_body__container
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = render "devise/shared/error_messages", resource: resource
      %ul.registration_body__container__field
        %li.nickname_field
          = f.text_field :nickname, placeholder:"ニックネーム",class:"nickname_field__nickname"
          %text【必須】
        %li.avatar_field
          #img_field_avatar{onclick: "$('#file_avatar').click()"}
          %textアバター画像【任意】
          = f.file_field :avatar,class: "image_input", id:"file_avatar",accept: '.jpeg, .jpg, .gif, .png, .bmp',style:"display:none;"
        %li.email_field
          = f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"メールアドレス",class:"email_field__mail"
          %text【必須】
        %li.password_field
          - if @minimum_password_length
            = f.password_field :password,class:"password_field__pass", autocomplete: "new-password", placeholder:"パスワード（#{@minimum_password_length} 文字以上)"
            %text【必須】
        %li.password_confirmation_field
          = f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"パスワード【確認】",class:"password_confirmation_field__confirmation"
          %text【必須】
        %li.actions_field
          = f.submit "Sign up",class:"actions_field__submit"
  .login_message
    %br/
    すでにアカウントお持ちですか？
  .login_btn
    = render "devise/shared/links"
