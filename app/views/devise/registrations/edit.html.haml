%h2
  アカウント情報編集
= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
  = render "devise/shared/error_messages", resource: resource
  .field
    = f.label :名前
    %br/
    = f.text_field :nickname
  .field
    = f.label :email
    %br/
    = f.email_field :email, autofocus: true, autocomplete: "email"
  - if devise_mapping.confirmable? && resource.pending_reconfirmation?
    %div
      Currently waiting confirmation for: #{resource.unconfirmed_email}
  %li.avatar_field
    #img_field_avatar{onclick: "$('#file_avatar').click()"}
      = image_tag avatar(current_user),style: "width: 50px;height:50px;border-radius:50%;box-shadow:rgba(133, 241, 255, 0.856)0px 0px 2px 2px;"
    %textアバター画像【任意】
    = f.file_field :avatar,class: "image_input", id:"file_avatar",accept: '.jpeg, .jpg, .gif, .png, .bmp',style:"display:none;"
  .field
    = f.text_field :profile
