- if member.online == true
  %li.user-login
    = image_tag avatar(member),crass:"user_avatar",style: "width: 50px;height:50px;border-radius:50%;box-shadow:rgba(133, 241, 255, 0.856)0px 0px 2px 2px;"
    = member.display
    = member.nickname
    ログイン中
- elsif member.online == false
  %li.user-logout
    = image_tag avatar(member),crass:"user_avatar",style: "width: 50px;height:50px;border-radius:50%;box-shadow:rgba(133, 241, 255, 0.856)0px 0px 2px 2px;"
    = member.display
    = member.nickname
    ログアウト中