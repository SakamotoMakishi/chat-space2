- if current_user.following?(@user)
  = link_to 'フォロー解除', relationship_path(current_user.relationships.find_by(follow_id: @user.id)), method: :delete, class:"btn btn-danger btn-block", remote:true
-else
  = link_to 'フォロー', relationships_path(params:{follow_id:@user.id}), method: :post, class:"btn btn-primary btn-block", remote: true